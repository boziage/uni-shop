{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/goods/goods",
			"style": {
				"navigationBarTitleText": "商品分类"
			}
		},
		{
			"path": "pages/cart/cart",
			"style": {
				"navigationBarTitleText": "购物车"
			}
		},
		{
			"path": "pages/center/center",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		},
		{
			"path": "pages/auth/login",
			"style": {
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/auth/register",
			"style": {
				"navigationBarTitleText": "注册",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/center/baseInfo",
			"style": {
				"navigationBarTitleText": "修改个人信息",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/goods/show",
			"style": {
				"navigationBarTitleText": "商品信息",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/orders/preview",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uView",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#909399",
		"selectedColor": "#EFA096",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/icon/i.png",
				"selectedIconPath": "static/icon/ia.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/goods/goods",
				"iconPath": "static/icon/g.png",
				"selectedIconPath": "static/icon/ga.png",
				"text": "商品"
			},
			{
				"pagePath": "pages/cart/cart",
				"iconPath": "static/icon/c.png",
				"selectedIconPath": "static/icon/ca.png",
				"text": "购物车"
			},
			{
				"pagePath": "pages/center/center",
				"iconPath": "static/icon/m.png",
				"selectedIconPath": "static/icon/ma.png",
				"text": "我的"
			}
		]
	}
}
